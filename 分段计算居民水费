#include <iostream>
#include <iomanip>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	int x;
	float y;
	cin>>x;
	if(x<=15){
		y=(float)4*x/3;
	}
	else{
		y=(float)2.5*x-17.5;
	}
	cout<<setiosflags(ios::fixed)<<setprecision(2)<<y<<endl;
	return 0;
}
